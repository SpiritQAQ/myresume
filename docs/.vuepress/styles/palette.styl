// font
$fontSize = 13px
$fontWeight = 400

// colors
$accentColor = #4688F1
$textColor = #161F28
$borderColor = #eaecef

ol
  padding-left 0

ol li
  list-style-position: inside;
  line-height: 1.5

.page
  .content
    code
      background rgba(135,131,120,0.15)
      color #EB5757
      margin: 0 0.2em ;

@media (max-width: 500px)
  h3
    code
      &:not(:nth-of-type(1))
        display: none;
